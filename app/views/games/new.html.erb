<div id="new">
  <p> <%= @letters %></p>

  <form action="/score" method="post">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
    <input type="text" name="guess" placeholder="Your longest word">
    <input type="hidden" name="grid" value="<%= @letters %>">
    <input type="submit">
  </form>
</div>
